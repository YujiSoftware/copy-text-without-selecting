{
  "name": "Copy text with Alt-Click",
  "version": "2.1.0",
  "manifest_version": 3,
  "description": "Copy text with Alt-Click. Easy and fast copy tool.",
  "default_locale": "en",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "@copy-text-without-selecting"
    }
  },
  
  "permissions" : [
    "storage", 
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  
  "icons" : {
    "48" : "icon.png"
  },
  
  "content_scripts": [
        {
            "matches": [
                "http://*/*", 
                "https://*/*"
            ],
            "js": [
                "menu.js"
            ],
            "run_at" : "document_start"
        }
    ],
  "options_ui": {
    "page": "options.html"
  }
}
